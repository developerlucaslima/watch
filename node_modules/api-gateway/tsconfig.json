{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      // DDD modules (domain-oriented)
      "@modules/*": ["modules/*"],
      "@auth/*": ["modules/auth/*"],
      "@video/*": ["modules/video/*"],
      "@watch/*": ["modules/watch/*"],

      // Horizontal layers
      "@routes/*": ["routes/*"],
      "@plugins/*": ["plugins/*"],
      "@middleware/*": ["middleware/*"],
      "@services/*": ["services/*"],

      // Infrastructure and shared layers
      "@env": ["env"],
      "@types/*": ["types/*"],
      "@errors/*": ["errors/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "prisma/seed.ts"]
}
