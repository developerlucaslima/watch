{
  "name": "watch",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "prisma"
  ],
  "scripts": {
    "lint:api": "cd apps/api-gateway && npx --no-install eslint src",
    "lint:worker": "cd apps/video-view-worker && npx --no-install eslint src",
    "lint:frontend": "cd apps/frontend && npx --no-install eslint src",
    "lint": "npm run lint:api && npm run lint:worker && npm run lint:frontend"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-import-resolver-typescript": "^4.3.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1"
  }
}
