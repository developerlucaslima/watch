{
  "name": "watch",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "prisma"
  ],
  "scripts": {
    "lint:api": "eslint apps/api-gateway/src --config apps/api-gateway/eslint.config.mjs",
    "lint:worker": "eslint apps/video-view-worker/src --config apps/video-view-worker/eslint.config.mjs",
    "lint:frontend": "eslint apps/frontend/src --config apps/frontend/eslint.config.mjs",
    "lint": "npm run lint:api && npm run lint:worker && npm run lint:frontend"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-import-resolver-typescript": "^4.3.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1"
  }
}
