{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@consumers/*": ["consumers/*"],
      "@use-cases/*": ["use-cases/*"],
      "@factories/*": ["factories/*"],
      "@repositories/*": ["repositories/*"],
      "@services/*": ["services/*"],
      "@database/*": ["database/*"],
      "@shared/*": ["shared/*"],
      "@env": ["env"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src"]
}
